<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.workfusion.UsersController">
   <children>
      <HBox prefHeight="200.0" spacing="10.0">
         <children>
            <VBox prefWidth="300.0" spacing="10.0">
               <children>
                  <Label text="User Management" />
                  <Label text="Username:" />
                  <TextField fx:id="usernameField" promptText="Enter username" />
                  <Label text="Password:" />
                  <PasswordField fx:id="passwordField" promptText="Enter password" />
                  <Label text="Role:" />
                  <ComboBox fx:id="roleComboBox" prefWidth="150.0" />
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="addButton" mnemonicParsing="false" text="Add" />
                        <Button fx:id="updateButton" mnemonicParsing="false" text="Update" />
                        <Button fx:id="resetPasswordButton" mnemonicParsing="false" text="Reset Password" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete" />
                        <Button fx:id="clearButton" mnemonicParsing="false" text="Clear" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <TableView fx:id="usersTable" prefHeight="200.0" prefWidth="500.0">
              <columns>
                <TableColumn fx:id="usernameColumn" prefWidth="150.0" text="Username" />
                <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Role" />
                  <TableColumn fx:id="createdAtColumn" prefWidth="150.0" text="Created At" />
              </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</VBox>