<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.workfusion.MatchesController">
   <children>
      <VBox spacing="10.0">
         <children>
            <Label text="Skills Matching" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Match seeker:" />
                  <ComboBox fx:id="seekerComboBox" prefWidth="200.0" />
                  <Button fx:id="matchSeekerButton" mnemonicParsing="false" text="Match" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Match job:" />
                  <ComboBox fx:id="jobComboBox" prefWidth="200.0" />
                  <Button fx:id="matchJobButton" mnemonicParsing="false" text="Match" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="matchAllButton" mnemonicParsing="false" text="Match All Seekers with All Jobs" />
               </children>
            </HBox>
            <TableView fx:id="resultsTable" prefHeight="400.0">
              <columns>
                <TableColumn fx:id="entityColumn" prefWidth="200.0" text="Job/Seeker" />
                <TableColumn fx:id="overlapCountColumn" prefWidth="100.0" text="Overlap Count" />
                  <TableColumn fx:id="totalJobSkillsColumn" prefWidth="120.0" text="Total Job Skills" />
                  <TableColumn fx:id="totalSeekerSkillsColumn" prefWidth="130.0" text="Total Seeker Skills" />
                  <TableColumn fx:id="scoreColumn" prefWidth="100.0" text="Score (%)" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>