<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.workfusion.SeekersController">
   <children>
      <HBox prefHeight="300.0" spacing="10.0">
         <children>
            <VBox prefWidth="300.0" spacing="10.0">
               <children>
                  <Label text="Seeker Management" />
                  <Label text="Name:" />
                  <TextField fx:id="nameField" promptText="Enter seeker name" />
                  <Label text="Email:" />
                  <TextField fx:id="emailField" promptText="Enter email address" />
                  <Label text="Skills (comma separated):" />
                  <TextArea fx:id="skillsArea" prefHeight="80.0" promptText="Enter seeker skills, separated by commas" />
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="addButton" mnemonicParsing="false" text="Add" />
                        <Button fx:id="updateButton" mnemonicParsing="false" text="Update" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete" />
                        <Button fx:id="clearButton" mnemonicParsing="false" text="Clear" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <TableView fx:id="seekersTable" prefHeight="300.0" prefWidth="500.0">
              <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                  <TableColumn fx:id="skillsColumn" prefWidth="150.0" text="Skills" />
              </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</VBox>