<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.workfusion.AppController" stylesheets="@app-theme.css">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_RIGHT" prefHeight="70.0" spacing="10.0" styleClass="topbar">
               <children>
                  <Label fx:id="userLabel" text="Welcome, User" styleClass="topbar-label">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="logoutButton" mnemonicParsing="false" text="Logout" styleClass="secondary-button">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox prefHeight="50.0" spacing="10.0" styleClass="nav-bar">
               <children>
                  <Button fx:id="usersButton" mnemonicParsing="false" text="Users" styleClass="secondary-button" />
                  <Button fx:id="jobsButton" mnemonicParsing="false" text="Jobs" styleClass="secondary-button" />
                  <Button fx:id="seekersButton" mnemonicParsing="false" text="Seekers" styleClass="secondary-button" />
                  <Button fx:id="matchesButton" mnemonicParsing="false" text="Matches" styleClass="secondary-button" />
                  <Button fx:id="itemsButton" mnemonicParsing="false" text="Items" styleClass="secondary-button" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" styleClass="content-area" />
   </center>
</BorderPane>