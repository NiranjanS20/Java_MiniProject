<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.workfusion.JobsController" stylesheets="@app-theme.css">
   <children>
      <HBox prefHeight="300.0" spacing="10.0">
         <children>
            <VBox prefWidth="300.0" spacing="10.0">
               <children>
                  <Label text="Job Management" styleClass="form-label" />
                  <Label text="Title:" styleClass="form-label" />
                  <TextField fx:id="titleField" promptText="Enter job title" styleClass="form-text-field" />
                  <Label text="Description:" styleClass="form-label" />
                  <TextArea fx:id="descriptionArea" prefHeight="80.0" promptText="Enter job description" styleClass="form-text-area" />
                  <Label text="Skills (comma separated):" styleClass="form-label" />
                  <TextArea fx:id="skillsArea" prefHeight="80.0" promptText="Enter required skills, separated by commas" styleClass="form-text-area" />
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="addButton" mnemonicParsing="false" text="Add" styleClass="primary-button" />
                        <Button fx:id="updateButton" mnemonicParsing="false" text="Update" styleClass="primary-button" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete" styleClass="primary-button" />
                        <Button fx:id="clearButton" mnemonicParsing="false" text="Clear" styleClass="secondary-button" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <TableView fx:id="jobsTable" prefHeight="300.0" prefWidth="500.0" styleClass="table-view">
              <columns>
                <TableColumn fx:id="titleColumn" prefWidth="150.0" text="Title" />
                <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description" />
                  <TableColumn fx:id="skillsColumn" prefWidth="150.0" text="Skills" />
              </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</VBox>