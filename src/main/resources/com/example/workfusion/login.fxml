<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.workfusion.LoginController" stylesheets="@app-theme.css">
   <center>
      <VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="15.0" styleClass="content-area">
         <children>
            <Label text="Delphi Minds" styleClass="form-label">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Job Skills Matching" styleClass="form-label">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Label text="Username:" styleClass="form-label" />
                  <TextField fx:id="usernameField" promptText="Enter username" styleClass="form-text-field" />
                  <Label text="Password:" styleClass="form-label" />
                  <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="form-text-field" />
                  <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" text="Login" styleClass="primary-button" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>